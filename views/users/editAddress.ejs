
<%- include('../layout/userhead.ejs') %>

<div class="mt-5 ms-5">
    <a href="/profileLoad" class="btn btn-dark">BACK</a>
</div>

<div class="container mt-5">
    <div class="card p-4">
        <h2 class="text-center">UPDATE ADDRESS</h2><br><br>
        <form action="/editAddress" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="newAddress" class="form-label">New Address:</label>
                        <input type="text" id="newAddress" name="newAddress" class="form-control" required value="<%= address.address %>">
                    </div>

                    <div class="mb-3">
                        <label for="city" class="form-label">City:</label>
                        <input type="text" id="city" name="city" class="form-control" required value="<%= address.city %>">
                    </div>

                    <div class="mb-3">
                        <label for="state" class="form-label">State:</label>
                        <input type="text" id="state" name="state" class="form-control" required value="<%= address.state %>">
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-3">
                        <label for="pincode" class="form-label">PinCode:</label>
                        <input type="text" id="pincode" name="pincode" class="form-control" required value="<%= address.pincode %>">
                    </div>

                    <div class="mb-3">
                        <label for="country" class="form-label">Country:</label>
                        <input type="text" id="country" name="country" class="form-control" required value="<%= address.country %>">
                    </div>

                </div>
            </div>

            <input type="hidden" name="userId" value="<%= user._id %>">
            <input type="hidden" name="addressId" value="<%= address._id %>">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update</button>
            </div>
        </form>
    </div>
</div>

<%- include('../layout/userFoot.ejs') %>